# Teknik Servis CRM - Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/teknik_servis
DIRECT_URL=postgresql://postgres:your_password@localhost:5432/teknik_servis

# Application
PORT=5000
NODE_ENV=development

# Security - CHANGE THIS IN PRODUCTION!
# Generate strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=super-secrettokenkey-CHANGE-THIS-IN-PRODUCTION

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# PostgreSQL (for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123-CHANGE-IN-PRODUCTION
POSTGRES_DB=teknik_servis